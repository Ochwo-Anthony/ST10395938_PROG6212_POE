@model ST10395938_POEPart2.Models.LecturerClaim
@{
    ViewData["Title"] = "Edit Claim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent border-0 pt-4 text-center">
                    <span class="badge bg-warning mb-3 px-3 py-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>Needs Fix
                    </span>
                    <h2 class="mb-0 fw-semibold">Edit Claim</h2>
                    <p class="text-muted mt-2">Update the claim details as requested</p>
                </div>
                <div class="card-body p-4">
                    <!-- Feedback -->
                    @if (!string.IsNullOrEmpty(Model.ReviewNote))
                    {
                        <div class="alert alert-info rounded-3 mb-4 border-0">
                            <i class="fas fa-comment-dots me-2"></i>@Model.ReviewNote
                        </div>
                    }

                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Lecturer Name -->
                        <div class="mb-4">
                            <label asp-for="LecturerName" class="form-label fw-semibold"></label>
                            <input asp-for="LecturerName" class="form-control" readonly />
                        </div>

                        <!-- Hours Worked -->
                        <div class="mb-4">
                            <label asp-for="HoursWorked" class="form-label fw-semibold"></label>
                            <input asp-for="HoursWorked" class="form-control" type="number" step="0.01" id="hoursWorked" max="180" />
                            <span asp-validation-for="HoursWorked" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Rate -->
                        <div class="mb-4">
                            <label asp-for="Rate" class="form-label fw-semibold"></label>
                            <input asp-for="Rate" class="form-control" readonly id="rate" />
                        </div>

                        <!-- Amount -->
                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-semibold">Amount</label>
                            <input asp-for="Amount" class="form-control" readonly id="amount" />
                        </div>

                        <!-- Note -->
                        <div class="mb-4">
                            <label asp-for="Note" class="form-label fw-semibold"></label>
                            <textarea asp-for="Note" class="form-control" rows="4"></textarea>
                        </div>

                        <!-- Evidence -->
                        <div class="mb-4">
                            <label for="evidence" class="form-label fw-semibold">Replace Evidence (optional)</label>
                            <input type="file" name="evidence" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.EvidenceFile))
                            {
                                <a href="~/uploads/@Model.EvidenceFile" target="_blank" class="btn btn-sm btn-outline-primary mt-2">
                                    <i class="fas fa-eye me-1"></i>View Current File
                                </a>
                            }
                        </div>

                        <div class="text-center mt-4 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg px-5 me-3">
                                <i class="fas fa-check-circle me-2"></i>Update Claim
                            </button>
                            <a asp-action="MyClaims" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const hoursInput = document.getElementById("hoursWorked");
        const rateInput = document.getElementById("rate");
        const amountInput = document.getElementById("amount");

        function calculateAmount() {
            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            if (hours > 180) {
                hoursInput.setCustomValidity("Cannot submit more than 180 hours per month");
            } else {
                hoursInput.setCustomValidity("");
            }
            amountInput.value = (hours * rate).toFixed(2);
        }

        hoursInput.addEventListener("input", calculateAmount);
        window.addEventListener("load", calculateAmount);
    </script>
}
