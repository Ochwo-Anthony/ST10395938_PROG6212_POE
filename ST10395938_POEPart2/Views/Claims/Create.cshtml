@model ST10395938_POEPart2.Models.LecturerClaim
@{
    ViewData["Title"] = "Create Lecturer Claim";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-transparent border-0 pt-4 pb-2">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <div style="width: 50px; height: 50px; background: var(--accent-teal); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                            <span style="color: white; font-size: 1.25rem;">📝</span>
                        </div>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-1" style="color: var(--primary-navy);">Submit New Claim</h2>
                        <p class="text-muted mb-0">Fill in the details below to submit your claim</p>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <!-- Validation Errors -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger rounded-3 mb-4 border-0">
                            <h6 class="alert-heading fw-semibold mb-2" style="color: #991b1b;">
                                Please correct the following errors:
                            </h6>
                            <ul class="mb-0 small">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LecturerName" class="form-label fw-semibold" style="color: var(--text-primary);">Lecturer Name</label>
                            <input asp-for="LecturerName" class="form-control" readonly />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="HoursWorked" class="form-label fw-semibold" style="color: var(--text-primary);">Hours Worked</label>
                            <input asp-for="HoursWorked" class="form-control" type="number" step="0.01" placeholder="0.00" id="hoursWorked" max="180" />
                            <span asp-validation-for="HoursWorked" class="text-danger small mt-1"></span>
                            <small class="form-text text-muted">Maximum 180 hours per month</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Rate" class="form-label fw-semibold" style="color: var(--text-primary);">Hourly Rate</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background: var(--background-light); color: var(--text-secondary);">R</span>
                                <input asp-for="Rate" class="form-control" type="number" step="0.01" readonly id="rate" />
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold" style="color: var(--text-primary);">Total Amount</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background: var(--background-light); color: var(--text-secondary);">R</span>
                                <input class="form-control" readonly id="amount" style="background: var(--background-light); color: var(--accent-teal); font-weight: 600;" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Note" class="form-label fw-semibold" style="color: var(--text-primary);">Notes & Description</label>
                        <textarea asp-for="Note" class="form-control" rows="4" placeholder="Add any additional notes or description about this claim..."></textarea>
                    </div>

                    <div class="mb-4">
                        <label for="evidence" class="form-label fw-semibold" style="color: var(--text-primary);">📎 Upload Evidence</label>
                        <input type="file" name="evidence" class="form-control" />
                        <div class="form-text text-muted">Supported formats: PDF, DOCX. Maximum file size: 5MB</div>
                    </div>

                    <div class="d-flex gap-2 mt-4 pt-2">
                        <button type="submit" class="btn btn-accent flex-fill py-2 fw-semibold">
                            Submit Claim
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const hoursInput = document.getElementById("hoursWorked");
        const rateInput = document.getElementById("rate");
        const amountInput = document.getElementById("amount");

        function calculateAmount() {
            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            if (hours > 180) {
                hoursInput.setCustomValidity("Cannot submit more than 180 hours per month");
            } else {
                hoursInput.setCustomValidity("");
            }
            amountInput.value = (hours * rate).toFixed(2);
        }

        hoursInput.addEventListener("input", calculateAmount);
        window.addEventListener("load", calculateAmount);
    </script>
}