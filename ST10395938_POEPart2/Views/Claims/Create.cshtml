@model ST10395938_POEPart2.Models.LecturerClaim
@{
    ViewData["Title"] = "Create Lecturer Claim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent border-0 pt-4 text-center">
                    <h2 class="mb-0 fw-semibold">Submit New Claim</h2>
                    <p class="text-muted mt-2">Fill in the details below to submit your claim</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <!-- Validation Errors -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger rounded-3 mb-4">
                                <h5 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:
                                </h5>
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Lecturer Name -->
                        <div class="mb-4">
                            <label asp-for="LecturerName" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-primary"></i>
                                </span>
                                <input asp-for="LecturerName" class="form-control border-start-0" readonly />
                            </div>
                        </div>

                        <!-- Hours Worked -->
                        <div class="mb-4">
                            <label asp-for="HoursWorked" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-clock text-primary"></i>
                                </span>
                                <input asp-for="HoursWorked" class="form-control border-start-0" type="number" step="0.01" placeholder="0.00" id="hoursWorked" max="180" />
                            </div>
                            <span asp-validation-for="HoursWorked" class="text-danger small mt-1"></span>
                            <small class="form-text text-muted">Max hours per month: 180</small>
                        </div>

                        <!-- Rate -->
                        <div class="mb-4">
                            <label asp-for="Rate" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-money-bill-wave text-primary"></i>
                                </span>
                                <input asp-for="Rate" class="form-control border-start-0" type="number" step="0.01" readonly id="rate" />
                                <span class="input-group-text bg-light border-start-0">R</span>
                            </div>
                        </div>

                        <!-- Amount -->
                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-semibold">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-calculator text-primary"></i>
                                </span>
                                <input asp-for="Amount" class="form-control border-start-0" readonly id="amount" />
                                <span class="input-group-text bg-light border-start-0">R</span>
                            </div>
                        </div>

                        <!-- Note -->
                        <div class="mb-4">
                            <label asp-for="Note" class="form-label fw-semibold"></label>
                            <textarea asp-for="Note" class="form-control" rows="4" placeholder="Add any notes or description..."></textarea>
                        </div>

                        <!-- Evidence -->
                        <div class="mb-4">
                            <label for="evidence" class="form-label fw-semibold">Upload Evidence (PDF/DOCX)</label>
                            <input type="file" name="evidence" class="form-control" />
                            <div class="form-text">Supported formats: PDF, DOCX. Max size: 5MB</div>
                        </div>

                        <div class="text-center mt-4 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg px-5 me-3">
                                <i class="fas fa-paper-plane me-2"></i>Submit Claim
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const hoursInput = document.getElementById("hoursWorked");
        const rateInput = document.getElementById("rate");
        const amountInput = document.getElementById("amount");

        function calculateAmount() {
            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            if (hours > 180) {
                hoursInput.setCustomValidity("Cannot submit more than 180 hours per month");
            } else {
                hoursInput.setCustomValidity("");
            }
            amountInput.value = (hours * rate).toFixed(2);
        }

        hoursInput.addEventListener("input", calculateAmount);
        window.addEventListener("load", calculateAmount);
    </script>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
