@model IEnumerable<ST10395938_POEPart2.Models.LecturerClaim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-transparent border-0 pt-4 text-center">
            <h2 class="mb-0 fw-semibold">My Submitted Claims</h2>
            <p class="text-muted mt-2">View and manage all your submitted claims</p>
        </div>
        <div class="card-body p-4">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Evidence</th>
                        <th>Submitted</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var claim in Model.OrderByDescending(c => c.CreateAt))
                        {
                            <tr>
                                <td>@claim.Id</td>
                                <td>@claim.HoursWorked</td>
                                <td>@($"R {claim.Rate:N2}")</td>
                                <td>@($"R {claim.HoursWorked * claim.Rate:N2}")</td>
                                <td>
                                    <span class="badge @(claim.Status.Contains("Approved") ? "bg-success" : claim.Status.Contains("Needs Fix") ? "bg-danger" : "bg-secondary")">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(claim.EvidenceFile))
                                    {
                                        <a href="~/uploads/@claim.EvidenceFile" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                    }
                                    else
                                    {

                                        <span class="text-muted">No File</span>
                                    }
                                </td>
                                <td>@claim.CreateAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (claim.Status == "Needs Fix")
                                    {
                                        <a asp-action="Edit" asp-route-id="@claim.Id" class="btn btn-sm btn-warning">Edit</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Locked</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center">No claims found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
