@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <div class="mb-4">
            <div style="width: 80px; height: 80px; background: var(--primary-navy); border-radius: 16px; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 1.5rem;">
                <span style="color: white; font-size: 2rem;">🏢</span>
            </div>
        </div>
        <h1 class="fw-bold mb-3" style="color: var(--primary-navy); font-size: 2.5rem;">
            Welcome to CMCS
        </h1>
        <p class="lead text-muted mx-auto" style="max-width: 600px; font-size: 1.2rem;">
            Contract Monthly Claim System 
        </p>
    </div>

    <!-- Role Cards -->
    <div class="row justify-content-center g-4">
        <!-- Lecturer Card -->
        <div class="col-md-4">
            <div class="card role-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="role-icon mb-4">
                        <div style="width: 80px; height: 80px; background: rgba(30, 58, 138, 0.1); border-radius: 16px; display: inline-flex; align-items: center; justify-content: center;">
                            <span style="color: var(--primary-navy); font-size: 2rem;">👨‍🏫</span>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-3" style="color: var(--primary-navy);">Lecturer Portal</h4>
                    <p class="text-muted mb-4" style="line-height: 1.6;">
                        Submit and track your claims
                    </p>
                    <a asp-controller="Claims" asp-action="Index" class="btn role-btn lecturer-btn w-100 py-3 fw-semibold">
                        Enter Lecturer Portal
                    </a>
                </div>
            </div>
        </div>

        <!-- Coordinator Card -->
        <div class="col-md-4">
            <div class="card role-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="role-icon mb-4">
                        <div style="width: 80px; height: 80px; background: rgba(217, 119, 6, 0.1); border-radius: 16px; display: inline-flex; align-items: center; justify-content: center;">
                            <span style="color: var(--accent-gold); font-size: 2rem;">📋</span>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-3" style="color: var(--primary-navy);">Coordinator Portal</h4>
                    <p class="text-muted mb-4" style="line-height: 1.6;">
                        Review pending claims
                    </p>
                    <a asp-controller="Coordinator" asp-action="Index" class="btn role-btn coordinator-btn w-100 py-3 fw-semibold">
                        Enter Coordinator Portal
                    </a>
                </div>
            </div>
        </div>

        <!-- Manager Card -->
        <div class="col-md-4">
            <div class="card role-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="role-icon mb-4">
                        <div style="width: 80px; height: 80px; background: rgba(13, 148, 136, 0.1); border-radius: 16px; display: inline-flex; align-items: center; justify-content: center;">
                            <span style="color: var(--accent-teal); font-size: 2rem;">👔</span>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-3" style="color: var(--primary-navy);">Manager Portal</h4>
                    <p class="text-muted mb-4" style="line-height: 1.6;">
                        Final approval of claims
                    </p>
                    <a asp-controller="Manager" asp-action="Index" class="btn role-btn manager-btn w-100 py-3 fw-semibold">
                        Enter Manager Portal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .mt-6 {
        margin-top: 4rem !important;
    }

    /* Card Styling */
    .role-card {
        border-radius: 16px;
        background: white;
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .role-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(30, 58, 138, 0.15) !important;
        }

    /* Button Styling */
    .role-btn {
        border: none;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .role-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .role-btn:hover::before {
            left: 100%;
        }

        .role-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

    .lecturer-btn {
        background: var(--primary-navy);
        color: white;
    }

        .lecturer-btn:hover {
            background: var(--primary-navy-dark);
            box-shadow: 0 6px 20px rgba(30, 58, 138, 0.3);
        }

    .coordinator-btn {
        background: var(--accent-gold);
        color: white;
    }

        .coordinator-btn:hover {
            background: #b45309;
            box-shadow: 0 6px 20px rgba(217, 119, 6, 0.3);
        }

    .manager-btn {
        background: var(--accent-teal);
        color: white;
    }

        .manager-btn:hover {
            background: var(--accent-teal-dark);
            box-shadow: 0 6px 20px rgba(13, 148, 136, 0.3);
        }

    /* Role Icons */
    .role-icon {
        transition: transform 0.3s ease;
    }

    .role-card:hover .role-icon {
        transform: scale(1.1);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .role-card {
            margin-bottom: 1.5rem;
        }

        .role-btn {
            padding: 0.75rem 1.5rem;
        }

        h1 {
            font-size: 2rem !important;
        }
    }

    @@media (max-width: 576px) {
        .mt-5 {
            margin-top: 2rem !important;
        }

        .mt-6 {
            margin-top: 3rem !important;
        }
    }
</style>