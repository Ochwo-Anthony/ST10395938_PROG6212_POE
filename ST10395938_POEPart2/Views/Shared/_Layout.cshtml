@using Microsoft.AspNetCore.Identity
@using ST10395938_POEPart2.Models
@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentBridge HR Portal</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-navy: #1e3a8a;
            --primary-navy-dark: #1e2a5a;
            --secondary-gray: #6b7280;
            --accent-teal: #0d9488;
            --accent-teal-dark: #0f766e;
            --accent-gold: #d97706;
            --background-light: #f9fafb;
            --text-primary: #1f2937;
            --text-secondary: #4b5563;
        }

        body {
            background: var(--background-light);
            font-family: 'Inter', sans-serif;
            color: var(--text-primary);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            line-height: 1.6;
        }

        /* Navigation */
        nav.navbar {
            background: var(--primary-navy);
            box-shadow: 0 2px 12px rgba(30, 58, 138, 0.15);
            padding: 0.8rem 0;
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: 700;
            font-size: 1.4rem;
        }

        .nav-link {
            color: #fff !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            margin: 0 0.2rem;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.15);
                color: #fff !important;
                transform: translateY(-1px);
                text-decoration: none;
            }

        /* Main Content */
        main {
            flex: 1;
            padding: 2rem 0;
        }

        /* Footer */
        footer {
            background: var(--primary-navy);
            color: white;
            padding: 1.5rem 0;
            margin-top: auto;
            font-weight: 500;
        }

            footer a {
                color: #fff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: var(--accent-teal);
                }

        /* Cards */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: #fff;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            }

        /* Buttons */
        .btn-primary {
            background: var(--primary-navy);
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: var(--primary-navy-dark);
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(30, 58, 138, 0.3);
            }

        .btn-outline-light {
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 8px;
            padding: 0.5rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-outline-light:hover {
                background: rgba(255, 255, 255, 0.1);
                border-color: rgba(255, 255, 255, 0.5);
                transform: translateY(-1px);
            }

        .btn-accent {
            background: var(--accent-teal);
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-accent:hover {
                background: var(--accent-teal-dark);
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(13, 148, 136, 0.3);
                color: white;
            }

        /* Headings */
        h1, h2, h3, h4, h5 {
            font-weight: 700;
            color: var(--primary-navy);
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 1.25rem;
        }

        /* Container */
        .container {
            max-width: 1200px;
        }

        /* Navigation Active State */
        .navbar-nav .nav-item .nav-link.active {
            background: var(--accent-teal);
            color: #fff !important;
        }

        /* Logout Form Styling */
        .logout-form {
            display: inline;
        }

        .logout-btn {
            margin-left: 10px;
        }

        /* Table Styling */
        .table {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            .table thead {
                background: var(--primary-navy);
                color: white;
            }

            .table th {
                border: none;
                padding: 1rem;
                font-weight: 600;
            }

            .table td {
                padding: 1rem;
                border-color: #e5e7eb;
            }

        /* Form Styling */
        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--accent-teal);
                box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
            }

        /* Alert Styling */
        .alert {
            border: none;
            border-radius: 8px;
            font-weight: 500;
        }

        .alert-success {
            background: #d1fae5;
            color: #065f46;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
        }

        .nav-item.lecturer .nav-link:hover {
            background: rgba(13, 148, 136, 0.2);
        }

        .nav-item.coordinator .nav-link:hover {
            background: rgba(217, 119, 6, 0.2);
        }

        .nav-item.manager .nav-link:hover {
            background: rgba(139, 69, 19, 0.2);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                     CMCS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- HR -->
                            @if (User.IsInRole("HR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="HR" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Claims" asp-action="Index">All Claims</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Coordinator" asp-action="Index">Coordinators</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Manager" asp-action="Index">Managers</a>
                                </li>
                            }

                            else if (User.IsInRole("Lecturer"))
                            {
                                <li class="nav-item lecturer">
                                    <a class="nav-link" asp-controller="Claims" asp-action="Index">My Claims</a>
                                </li>
                                <li class="nav-item lecturer">
                                    <a class="nav-link" asp-controller="Claims" asp-action="Create">
                                         Create Claim
                                    </a>
                                </li>
                                <li class="nav-item lecturer">
                                    <a class="nav-link" asp-controller="Claims" asp-action="MyClaims">Track Claims</a>
                                </li>
                            }

                            else if (User.IsInRole("Coordinator"))
                            {
                                <li class="nav-item coordinator">
                                    <a class="nav-link" asp-controller="Coordinator" asp-action="Index">Coordinator Dashboard</a>
                                </li>
                            }

                            else if (User.IsInRole("Manager"))
                            {
                                <li class="nav-item manager">
                                    <a class="nav-link" asp-controller="Manager" asp-action="Index">Manager Dashboard</a>
                                </li>
                            }

                            <!-- Logout button -->
                            <li class="nav-item ms-2">
                                <form class="logout-form" asp-area="" asp-controller="User" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light logout-btn">
                                         Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                          
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">
                                     Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="py-4 container">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 - CMCS | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>